root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yaml, yml, neon, neon.dist, json, json.dist}]
indent_size = 2

[tests/*/Fixtures/expected/*.json]
indent_size = 4
insert_final_newline = false
