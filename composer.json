{
  "name": "krzysztofrewak/openapi-merge",
  "description": "Merge multiple OpenAPI YML/JSON files into one",
  "type": "application",
  "keywords": [
    "openapi",
    "merge"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Marcel Thole",
      "role": "Creator"
    },
    {
      "name": "Krzysztof Rewak",
      "role": "Editor"
    }
  ],
  "require": {
    "php": "^8.2",
    "cebe/php-openapi": "^1.7",
    "symfony/console": "^6.0"
  },
  "require-dev": {
    "blumilksoftware/codestyle": "^1.2",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "KrzysztofRewak\\OpenApiMerge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KrzysztofRewak\\OpenApiMerge\\Tests\\": "tests"
    }
  },
  "scripts": {
    "cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff --config codestyle.php",
    "csf": "./vendor/bin/php-cs-fixer fix --diff --config codestyle.php",
    "test": "./vendor/bin/phpunit tests --colors always"
  },
  "config": {
    "sort-packages": true
  }
}
